<div class="recipes">
  {{#each recipes}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/recipe/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
       <h4>{{ingredients}}</h4>
      <h3>{{instructions}}</h3>
    </div>
  </article>
  {{/each}}
</div>