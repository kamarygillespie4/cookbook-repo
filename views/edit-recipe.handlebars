<div class="recipe card">
  <div class="card-header">
    <h2>Edit Recipe</h2>
  </div>
  <form id="edit-recipe-form" class="card-body">
    <input type="hidden" name="recipe-id" value="{{recipe.id}}" />

    <label class="form-label" for="recipe-title">Title</label>
    <input type="text" name="recipe-title" value="{{recipe.title}}" class="form-input" />

    <label class="form-label" for="recipe-ingredients">Ingredients</label>
    <textarea name="recipe-ingredients" class="form-input">{{recipe.ingredients}}</textarea>

    <label class="form-label" for="recipe-instructions">instructions</label>
    <textarea name="recipe-instructions" class="form-input">{{recipe.instructions}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>