<div class="recipe card">
  <div class="card-header">
    <h2>Edit Recipe</h2>
  </div>
  <form id="edit-recipe-form" class="card-body">
    <input type="hidden" name="recipe-id" value="{{recipe.id}}" />

    <label class="form-label" for="recipe-title">Title</label>
    <input type="text" name="recipe-title" value="{{recipe.title}}" class="form-input" />

    <label class="form-label" for="recipe-body">Content</label>
    <textarea name="recipe-body" class="form-input">{{recipe.body}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>