<div class="recipe card">
  <div class="card-header">
    <h2>Create New recipe</h2>
  </div>
  <form id="new-recipe-form" class="card-body">
    <label class="form-label" for="recipe-title">Title</label>
    <input type="text" name="recipe-title" class="form-input" />

    <label class="form-label" for="recipe-ingredients">Ingredients</label>
    <textarea name="recipe-ingredients" class="form-input"></textarea>

    <label class="form-label" for="recipe-instructions">Instructions</label>
    <textarea name="recipe-instructions" class="form-input"></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>